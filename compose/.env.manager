# Nexus Docker Manager Environment Configuration
# Copy this file to .env in the compose directory

# === Web Manager Configuration ===
WEB_MANAGER_PORT=5000
SECRET_KEY=nexus-docker-secret-key-change-this-in-production

# === Docker Configuration ===
RESTART_POLICY=unless-stopped
DEBUG=false

# === Resource Limits (for dynamically created containers) ===
DEFAULT_MEMORY_LIMIT=2g
DEFAULT_CPU_LIMIT=2.0
DEFAULT_THREADS=4

# === Network Configuration ===
NETWORK_SUBNET=172.20.0.0/16
